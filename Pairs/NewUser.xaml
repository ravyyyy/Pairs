<Window x:Class="Pairs.NewUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pairs"
        mc:Ignorable="d"
        Title="New User" Height="450" Width="800">
    <Grid Margin="10">
        <Border Background="GhostWhite" BorderBrush="Silver" BorderThickness="1"/>
        <TextBlock FontWeight="Bold" FontSize="20" Margin="50,75,0,0">Username:</TextBlock>
        <TextBox x:Name="usernameBox" Margin="171,75,277,288"></TextBox>
        <TextBlock FontWeight="Bold" FontSize="20" Margin="50,179,-4,0" Text="Image:"/>
        <Image x:Name="avatarImage" Margin="171,158,382,83"></Image>
        <Button Margin="171,348,534,10" Click="Button_Click_1">Previous</Button>
        <Button Margin="315,348,390,10" Click="Button_Click_2">Next</Button>
        <Button Margin="604,207,77,141" Click="Button_Click">Sign Up</Button>
    </Grid>
</Window>
